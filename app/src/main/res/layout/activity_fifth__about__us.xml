<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="@drawable/i514"
    tools:context="com.zeus.ak95.tictactoe.Fifth_About_Us"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent" android:id="@+id/ffllm1"
        android:layout_height="wrap_content" android:layout_weight="10"
        android:orientation="horizontal" >
    <ImageView
        android:layout_width="fill_parent" android:id="@+id/ffiv1"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:src="@drawable/tictoe" android:layout_alignParentTop="true" />
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent" android:id="@+id/ffllm2"
        android:layout_height="wrap_content" android:layout_weight="15"
        android:orientation="horizontal" android:background="@drawable/back05"
        android:layout_marginTop="10dp" android:gravity="right|top">

    <TextView
        android:layout_width="fill_parent" android:id="@+id/fftv1"
        android:layout_height="wrap_content" android:textSize="15sp"
        android:gravity="start" android:layout_below="@+id/ffllm1"
        android:text=" For FeedBack click Connect below !"
        android:layout_marginTop="20dp" android:textStyle="bold"
        android:textColor="#FFFFFF"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent" android:id="@+id/ffllm3"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal" android:layout_marginTop="15dp"
        >

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="140dp" android:elevation="4dp"
            android:id="@+id/ffet1" android:textColorHint="@color/grey_dark"
            android:layout_marginTop="20dp"
            android:hint="Type Feedback Here..."
            android:layout_below="@+id/fftv1"
            android:textColor="#000000" android:layout_marginLeft="5dp"
            android:textDirection="rtl" android:background="#ddFFFFFF"
            android:scrollbarFadeDuration="500"
            android:verticalScrollbarPosition="right"
            android:layout_weight="1" android:gravity="center"
             />

    <ImageView
        android:layout_width="160dp" android:id="@+id/ffiv2"
        android:layout_height="80dp" android:layout_weight="1"
        android:background="@drawable/connectiv1"
        android:padding="50dp" android:elevation="5dp"
         android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

</LinearLayout>
</LinearLayout>